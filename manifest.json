{
	"manifest_version": 3,
	"name": "Get Element Styles",
	"version": "1.0",
	"description": "Extract CSS styles from web elements with an intuitive interface",
	"permissions": ["activeTab", "clipboardWrite"],
	"action": {
		"default_title": "Click to start selecting elements"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"commands": {
		"toggle-picker": {
			"suggested_key": {
				"default": "Alt+S"
			},
			"description": "Toggle element picker"
		}
	}
}
