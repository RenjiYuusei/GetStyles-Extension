{
	"manifest_version": 3,
	"name": "Get Element Styles",
	"version": "1.0",
	"description": "Get element styles element",
	"permissions": ["activeTab", "clipboardWrite"],
	"action": {
		"default_title": "Get Styles",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
