{
	"manifest_version": 3,
	"name": "Get Element Styles",
	"version": "1.1.1",
	"description": "Tool to extract CSS styles from elements on the web with a visual interface",
	"permissions": ["activeTab", "clipboardWrite"],
	"action": {
		"default_title": "Click to select element"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
